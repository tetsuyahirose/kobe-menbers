<div class="text-right mr-5 mb-2">
<button type="button" class="btn btn-primary mr-3"><%= link_to 'New Profile', new_profile_path, :style=>"color:white;"%></button>
<button type="button" class="btn btn-danger mr-5"><%= link_to 'LOGOUT', destroy_user_session_path, method: :delete, :style=>"color:white;"%></button>
</div>
<h1>Profiles</h1>
<table class="table table-striped table-bordered" style="table-layout:fixed;width:100%; word-break: break-word;
	word-wrap: break-word;">
  <thead class="thead-dark">
    <tr>
      <th style="width:7%;">#</th>
      <th style="width:15%;">名前</th>
      <th style="width:12%;">誕生日</th>
      <th style="width:50%;">住所</th>
      <th style="width:8%;">Is enable</th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td ><%= profile.user_id %></td>
        <td><%= profile.name %></td>
        <td><%= profile.birthday %></td>
        <td><%= profile.address %></td>
        <td><%= profile.is_enable %></td>
        <td><button type="button" class="btn btn-success"><%= link_to 'Show', profile, :style=>"color:white;"%></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

