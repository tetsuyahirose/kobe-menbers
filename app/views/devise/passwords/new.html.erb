<div class="container">
<div class="card border-Secondary" style="width: 40rem; height: 19rem;">
<h1 class="card-header border-Secondary">パスワードをお忘れですか?</h1>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="field">
    <%= f.label :Eメール %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"40" %>
  </div>
  <div class="actions mt-3 mb-3">
    <%= f.submit "パスワードを送信する" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
<%= render "devise/shared/error_messages", resource: resource %>
</div>
</div>