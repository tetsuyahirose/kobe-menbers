<div class="container">
<div class="card border-Secondary" style="width: 40rem; height: 23rem;">
<h1 class="card-header border-Secondary">ログイン</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field space_top">
    <%= f.label :Eメール %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"40" %>
  </div>

  <div class="field space_top">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password", :size=>"40" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-3">
      <%= f.check_box :remember_me, :size=>"40"%>
      <%= f.label :ログインを記憶する %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
